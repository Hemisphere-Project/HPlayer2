#!/bin/bash
DIR="$(dirname "$(readlink -f "$0")")"
cd $DIR

if [ "$#" -eq  "0" ]; then
 	profile=default
else
 	profile=$1
fi

# if pipenv is installed, use it
if command -v pipenv &> /dev/null; then
    pipenv run python -u "$DIR/launcher.py" "$profile" 
else
    python3 -u "$DIR/launcher.py" "$profile"
fi


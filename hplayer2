#!/bin/bash
DIR="$(dirname "$(readlink -f "$0")")"

if [ "$#" -eq  "0" ]; then
 	profile=default
else
 	profile=$1
fi

# if poetry is installed, use it
if command -v poetry &> /dev/null; then
    cd "$DIR"
    poetry run python -u "$DIR/launcher.py" "$profile" 
else
    python3 -u "$DIR/launcher.py" "$profile"
fi

